filebeat.inputs:
  - type: log
    enabled: true
    paths:
      - /var/log/nginx/access.log
      - /var/log/nginx/error.log

filebeat.config.modules:
  path: ${path.config}/modules.d/*.yml
  reload.enabled: true

output.elasticsearch:
  hosts: ["http://10.0.10.30:9200"]   # ⬅️ ЖЁСТКО IP Elasticsearch

setup.kibana:
  host: "http://10.0.1.30:5601"        # ⬅️ ЖЁСТКО IP Kibana
